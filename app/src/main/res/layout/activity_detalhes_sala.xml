<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalhes_sala"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.guiacinemamaneiro.guia_cinema.Controller.Sala.DetalhesSalaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tituloSala"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Sala X"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/detalhesSala"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="detalhesSala" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/title_sessoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filmes e HorÃ¡rios" />

            <ListView
                android:id="@+id/listaSessoes"
                android:layout_width="match_parent"
                android:layout_height="307dp"
                android:layout_weight="0.70"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
